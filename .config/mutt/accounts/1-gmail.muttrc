macro index,pager CS ";<copy-message>=[Gmail].Spam<enter>" "copy mail to spam" # mw-autogenerated
macro index,pager gj "<change-folder>=nigel.agwah@outlook.com.Junk<enter>" "go to junk" # mw-autogenerated
