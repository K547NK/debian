[module/title]
type = internal/xwindow
label  = %title%
label-maxlen = 50
label-empty = Nigel Agwah

[module/i3]
type = internal/i3
pin-workspaces = true
wrapping-scroll = true
index-sort = true
format = <label-state> <label-mode>
label-mode = %mode%
label-separator = ||
label-separator-padding = 2
label-separator-foreground = #000000

[module/date]
type = internal/date
interval = 1
date = %m/%d
time = %H:%M
format =  <label>
label = %date% %time%

[module/cpu]
type = internal/cpu
